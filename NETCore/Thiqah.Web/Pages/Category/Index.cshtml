@page
@model Index
@{
    ViewData["Title"]="Category Management";
}
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model.Categories){
    <tr>
      <th scope="row">@item.Id</th>
      <td>@item.Name</td>
    </tr>
    }
  </tbody>
</table>